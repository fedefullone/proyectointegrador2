<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>

<body>
	<!-- Header -->
	<% if (locals.user) { %> 
		<%- include('partials/headerLogueado') %>
	<% } else { %>
		<%- include('partials/header') %>
	<% } %> 
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de b√∫squeda</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% if (sneakers.length > 0) { %> 
				<% for(let i=0; i < sneakers.length; i++){ %>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/product/<%= sneakers[i].id %>">
								<figure class="product-box_image">
									<img src="/images/sneakers/<%= sneakers[i].image %>" alt="bugeada">
								</figure>
								<article class="product-box_data">
									<h2>
										<%= sneakers[i].marca %>
									</h2>
									<p> </p>
									<h2>
										<%= sneakers[i].modelo %>
									</h2>
									<p>
										<%= sneakers[i].descripcion %>
									</p>
									<p>Comentarios: <%=sneakers[i].comentarios.length%></p>
								</article>
							</a>
						</section>
					</div>

					<%}%>
					<% } else { %>
						<h1>No encontramos coincidencias con tu busqueda</h1>
					<% } %> 
				
			


				
			


	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
	
</body>

</html>
