<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>

<body>
	<!-- Header -->
	<% if (locals.user) { %> 
		<%- include('partials/headerLogueado') %>
	<% } else { %>
		<%- include('partials/header') %>
	<% } %> 
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de b√∫squeda</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% if (productos.length > 0) { %> 
				<% for ( let i=0 ; i < productos.length; i++) { %>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
								<figure class="product-box_image">
									<img src= "/images/products/<%=productos[i].imagen %> " alt="img">
								</figure>
								<article class="product-box_data">
									<h2 class="producto"> <a href="/product/<%= productos[i].nombre %> "><%= productos[i].nombre %> </h2> </a>
									<p> <%= productos[i].descripcion%> </p>
									<p><a href="/users/profile/<%= productos[i].usuario.id%> "> Subido por: <%= productos[i].usuario.username %> </p> </a>
								</article>		
						</section>
					</div>
					<% } %> 
					<% } else { %>
						<h1>No encontramos coincidencias con tu busqueda</h1>
					<% } %> 
			


				
			


	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>

</html>