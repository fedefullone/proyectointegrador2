<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>

    <body>
        <!-- Header -->
        <%- include('./partials/header') %>
            <!-- /Header -->

            <!-- Banner -->
            <div class="banner">
                <img src="images/banner2.png" alt="Banner de ofertas">
            </div>
            <!-- /Banner -->

            <div class="container products-wrapper">
				<div class="row">
					<div class="col-12">
						<h2 class="products-title">TODOS LOS PRODUCTOS</h2>
					</div>
					<!-- Show the "ultimos" products -->
					<% for(let i=0; i < productos.length; i++){ %>
						<div class="col-12 col-sm-6 col-lg-3">
							<section class="product-box">
								<a href="/product/:id">
									<figure class="product-box_image">
										<img src="<%= productos[i].imagen %>" alt="cafetera moulinex">
									</figure>
									<article class="product-box_data">
										<h2>
											<%= productos[i].marca %>
										</h2>
										<p> </p>
										<h2>
											<%= productos[i].modelo %>
										</h2>
										<p>
											<%= productos[i].comentarios %>
										</p>
										<p>Comentarios: 12</p>
									</article>
								</a>
							</section>
						</div>

						<%}%>
						
		<%- include('./partials/footer') %>
    </body>

</html>