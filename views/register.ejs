						<br>
						<div>
							<label for="password" class="formulario-datos">Contrase√±a </label>
							<input id="password" type="password" name="password" value="">
						</div>
						<br>
						<div>
							<label for="fecha de nacimiento" class="formulario-datos">Fecha de nacimiento:</label>
							<input id="Fecha de nacimiento" type="date" name="FechaDeNacimiento" value="">
						</div>
						<br>
						<div>
							<label for="numero de documento" class="formulario-datos">DNI:</label>
							<input id="numero de documento" type="text" name="dni" value="">
						</div>
						<br>
						<div>
							<input type="file" name="images" value="">
						</div>
						<br>
						<div>
							<button type="submit">Registrarme</button>
						</div>

					</form>
				</div>
			</div>
		</section>
		</main>
		<%- include('./partials/footer') %>

</body>

</html>