							<label for="name" class="formulario-datos">Nombre:</label>
							<input id="name" type="text" name="name" value="">
						</div>
						<br>
						<div>
							<label for="email" class="formulario-datos">Email:</label>
							<input id="email" type="text" name="email" value="">
