<header class="main-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-5 col-md-2">
                <a href="/" class="main-header_home-link">
                    <img class="main-header_home-link" src="/images/logo7.png">
                </a>
            </div>

            <div class="col-7 col-md-6">
                <form action="search-results" method="GET" class="search-form">
                    <input type="text" name="search" placeholder="Buscar productos, marcas y más" class="search-form_input">
                    <button type="submit" class="search-form_button"><i class="fas fa-search"></i></button>
                </form>
            </div>

            <div class="col-12 col-md-4">
                <a class="main-header_credit-link">
                    <i class="fas fa-hand-holding-usd"></i>
                    Todas tus zapatillas en un solo lugar. LOGUEADO
                </a>
            </div>
        </div>

        <button class="btn-toggle-navbar">
            <i class="fas fa-bars"></i>
        </button>

        <nav class="main-navbar">
            <ul class="left-navbar">
                <!--<li><a href="/all-products">Todos los productos</a></li>-->
                <li><a href="/product/create">Cargar productos</a></li> 
            </ul>

            <ul class="right-navbar">
                <li><a href="/user/<%= user.id %>">
                    <%= user.username %> <i class="fas fa-user"></i>
                    </a>
                </li>
                <li><a href="/user/logout">
                    Cerrar sesión <i class="fas fa-user"></i>
                </a>
            </li>
            </ul>
        </nav>
    </div>
</header>